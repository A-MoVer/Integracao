{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport { auth } from \"@/firebase\";\nimport { GoogleAuthProvider, signInWithPopup } from \"firebase/auth\";\nimport axios from \"axios\";\nexport default {\n  name: \"LoginPage\",\n  methods: {\n    async loginWithGoogle() {\n      try {\n        // Criar um provedor do Google\n        const provider = new GoogleAuthProvider();\n\n        // Realizar o login via Google\n        const result = await signInWithPopup(auth, provider);\n        const user = result.user;\n\n        // Obter o token de autenticação do Firebase\n        const token = await user.getIdToken();\n        localStorage.setItem(\"userToken\", token); // Guardar o token no localStorage\n\n        const userData = {\n          name: user.displayName,\n          email: user.email,\n          profile_picture: user.photoURL\n        };\n\n        // Enviar os dados ao backend com o token\n        const response = await axios.post(\"http://localhost:3000/users/auth/google\",\n        // Alterar a URL para o seu backend se necessário\n        userData, {\n          headers: {\n            Authorization: `Bearer ${token}` // Enviar o token de autenticação no cabeçalho\n          }\n        });\n        console.log(\"Resposta do backend:\", response.data);\n\n        // Guardar os dados do usuário no localStorage\n        localStorage.setItem(\"user\", JSON.stringify(response.data));\n\n        // Redirecionar para a página principal após login\n        this.$router.push(\"/home\");\n      } catch (error) {\n        console.error(\"Erro ao fazer login com Google:\", error);\n        alert(\"Não foi possível efetuar o login. Tente novamente.\");\n      }\n    }\n  }\n};","map":{"version":3,"names":["auth","GoogleAuthProvider","signInWithPopup","axios","name","methods","loginWithGoogle","provider","result","user","token","getIdToken","localStorage","setItem","userData","displayName","email","profile_picture","photoURL","response","post","headers","Authorization","console","log","data","JSON","stringify","$router","push","error","alert"],"sources":["C:\\Users\\Diogo Resende\\Desktop\\DWA\\G7_24-25\\G7_24-25\\Receitas\\frontend\\src\\components\\LoginPage.vue"],"sourcesContent":["<template>\r\n  <div class=\"login-container\">\r\n    <div class=\"login-card\">\r\n      <img src=\"@/assets/icon.png\" alt=\"Logo\" class=\"logo\" />\r\n      <h2>Entrar com serviços externos</h2>\r\n      <button class=\"login-btn google-login\" @click=\"loginWithGoogle\">Entrar com Google</button>\r\n      <p class=\"admin-link\">\r\n        É Administrador? <a @click=\"$router.push('/admin-login')\" style=\"cursor: pointer;\">Fazer login como Admin</a>\r\n      </p>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { auth } from \"@/firebase\";\r\nimport { GoogleAuthProvider, signInWithPopup } from \"firebase/auth\";\r\nimport axios from \"axios\";\r\n\r\nexport default {\r\n  name: \"LoginPage\",\r\n  methods: {\r\n    async loginWithGoogle() {\r\n      try {\r\n        // Criar um provedor do Google\r\n        const provider = new GoogleAuthProvider();\r\n        \r\n        // Realizar o login via Google\r\n        const result = await signInWithPopup(auth, provider);\r\n        const user = result.user;\r\n\r\n        // Obter o token de autenticação do Firebase\r\n        const token = await user.getIdToken();\r\n        localStorage.setItem(\"userToken\", token); // Guardar o token no localStorage\r\n\r\n        const userData = {\r\n          name: user.displayName,\r\n          email: user.email,\r\n          profile_picture: user.photoURL,\r\n        };\r\n\r\n        // Enviar os dados ao backend com o token\r\n        const response = await axios.post(\r\n          \"http://localhost:3000/users/auth/google\", // Alterar a URL para o seu backend se necessário\r\n          userData,\r\n          {\r\n            headers: {\r\n              Authorization: `Bearer ${token}`, // Enviar o token de autenticação no cabeçalho\r\n            },\r\n          }\r\n        );\r\n\r\n        console.log(\"Resposta do backend:\", response.data);\r\n\r\n        // Guardar os dados do usuário no localStorage\r\n        localStorage.setItem(\"user\", JSON.stringify(response.data));\r\n\r\n        // Redirecionar para a página principal após login\r\n        this.$router.push(\"/home\");\r\n      } catch (error) {\r\n        console.error(\"Erro ao fazer login com Google:\", error);\r\n        alert(\"Não foi possível efetuar o login. Tente novamente.\");\r\n      }\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style>\r\n.login-container {\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n  height: 100vh;\r\n  background-image: url(\"@/assets/background.jpg\");\r\n  background-size: cover;\r\n  background-repeat: no-repeat;\r\n  background-position: center;\r\n}\r\n\r\n.login-card {\r\n  background: white;\r\n  padding: 30px;\r\n  border-radius: 8px;\r\n  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);\r\n  text-align: center;\r\n  width: 300px;\r\n  display: flex;\r\n  flex-direction: column;\r\n  justify-content: center;\r\n  align-items: center;\r\n}\r\n\r\n.logo {\r\n  width: 80px;\r\n  height: 80px;\r\n  margin-bottom: 20px;\r\n}\r\n\r\nh2 {\r\n  margin-bottom: 20px;\r\n  font-size: 1.2em;\r\n  color: #333;\r\n  text-align: center;\r\n}\r\n\r\n.google-login {\r\n  background: #4285f4;\r\n  color: white;\r\n  border: none;\r\n  padding: 10px 20px;\r\n  font-size: 1em;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.google-login:hover {\r\n  background: #357ae8;\r\n}\r\n\r\n.admin-link {\r\n  font-size: 0.9em;\r\n}\r\n\r\n.admin-link a {\r\n  color: #007bff;\r\n  text-decoration: none;\r\n}\r\n\r\n.admin-link a:hover {\r\n  text-decoration: underline;\r\n}\r\n</style>\r\n"],"mappings":";AAcA,SAASA,IAAG,QAAS,YAAY;AACjC,SAASC,kBAAkB,EAAEC,eAAc,QAAS,eAAe;AACnE,OAAOC,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAI,EAAE,WAAW;EACj